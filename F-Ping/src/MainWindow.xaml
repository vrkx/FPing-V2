<Window x:Class="FPing_V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FPing_V2" 
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="FPing Launcher" Height="539" Width="780"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Grid>
        <Border Background="#101015" CornerRadius="8">
            <Grid>
                <wv2:WebView2 x:Name="webView" Panel.ZIndex="0" />

                <StackPanel Panel.ZIndex="10" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                    <Button Content="➖" Width="30" Height="30" Margin="0,0,5,0"
                            Background="Transparent" BorderBrush="Transparent"
                            Click="MinimizeButton_Click" Foreground="#FF868686" />
                    <Button Content="❌" Width="30" Height="30"
                            Background="Transparent" BorderBrush="Transparent"
                            Click="CloseButton_Click" Foreground="#FF868686" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

    <Window.Resources>
    </Window.Resources>
</Window>