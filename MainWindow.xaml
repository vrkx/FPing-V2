<Window x:Class="FPing_V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FPing_V2"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="780"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True" >

    <Grid>

        <Border CornerRadius="10" Background="#101015" />

        <Grid>

            <Border CornerRadius="10">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF101015"/>
                        <GradientStop Color="#FF202050" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Grid Margin="195,148,195,148" Name="WBanner" Visibility="Visible" Panel.ZIndex="2">


                <Border Background="#151520" CornerRadius="10" BorderBrush="#202030" BorderThickness="1.5"/>
                <Image Margin="84,42,56,82" Source="/public/imgs/logo.png" Stretch="Fill"/>
                <Label Content="Let's set up some things before continuing!" HorizontalAlignment="Center" FontSize="19" Foreground="White" Style="{StaticResource SanFrancisco}" Margin="0,157,0,46"/>
                <Label Content="Welcome!" FontSize="20" HorizontalAlignment="Center" Foreground="White" Style="{StaticResource SanFrancisco}" Margin="0,131,0,41"/>

                <Grid Name="Welocme" Margin="10,193,9,10">

                    <Border Background="#202090" CornerRadius="5" BorderBrush="#151520" BorderThickness="1.5" HorizontalAlignment="Left" Width="371"/>
                    <Image Source="/public/imgs/icons/arror.png" Margin="341,8,4,9"/>
                    <Label Content="Continue" Style="{StaticResource SanFrancisco}" Foreground="White" FontWeight="Regular" FontSize="15" Margin="10,2,273,-1"/>
                    <Button Name="Continue1" Click="Continue1_Click"
                            Cursor="Hand" Background="#00000000" BorderBrush="{x:Null}" Foreground="{x:Null}" Panel.ZIndex="2" Opacity="0.001"/>
                </Grid>

            </Grid>

            <Grid Margin="195,194,195,102" Name="Options" Opacity="0.0">
                <Grid.RenderTransform>
                <TransformGroup>
                    <TranslateTransform Y="0"/>
                </TransformGroup>
                </Grid.RenderTransform> 
               

                <Border Background="#151520" CornerRadius="10" BorderBrush="#202030" BorderThickness="1.5"/>
                <Label Content="You can change the theme later" HorizontalAlignment="Center" FontSize="15" Foreground="Gray" Style="{StaticResource SanFrancisco}" Margin="0,193,0,10"/>
                <Label Content="Select the theme you like the most!" FontSize="20" HorizontalAlignment="Center" Foreground="White" Style="{StaticResource SanFrancisco}" Margin="0,10,0,193"/>

                <Grid Margin="34,72,34,72">

                 

                    <Grid Margin="22,5,219,5">
                        <Button Panel.ZIndex="-5" Opacity="0.001" Background="#02DDDDDD" Click="Button_Click" />
                        <Border Background="White" BorderBrush="#202035" BorderThickness="1" CornerRadius="50" Margin="8,0,8,17"/>
                        <Label Content="White" FontSize="9" Foreground="White" Style="{StaticResource SanFrancisco}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0"/>
                    </Grid>

                    <Grid Margin="120,5,120,5">

                        <Border Background="#151520" BorderBrush="#202035" BorderThickness="1" CornerRadius="50" Margin="9,0,9,17"/>
                        <Label Content="Default" FontSize="9" Foreground="White" Style="{StaticResource SanFrancisco}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0"/>
                    </Grid>
                    <Grid Margin="221,5,19,5">

                        <Border Background="Black" BorderBrush="#202035" BorderThickness="1" CornerRadius="50" Margin="9,0,9,17"/>
                        <Label Content="Black" FontSize="9" Foreground="White" Style="{StaticResource SanFrancisco}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0"/>
                    </Grid>

                </Grid>


                  

            </Grid>

        </Grid>

    </Grid>
</Window>
